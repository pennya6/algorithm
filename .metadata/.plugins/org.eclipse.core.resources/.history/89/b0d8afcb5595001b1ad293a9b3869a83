//퀵정렬을 이용한 movie.txt 정렬
package work1;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Comparator;

public class movie {
	public class info{
		private String name;
		private String dir;
		private int year;
		private int sum_p;
		
		public info(String name,String dir,int year,int sum_p) {
			this.name=name;
			this.dir=dir;
			this.year=year;
			this.sum_p=sum_p;
		}
		
		//영화제목 가나다순 비교
		public class NameOrder implements Comparator<info>{
			public int compare(info i1, info i2) {
				return i1.name.compareTo(i2.name);
			}
		}
		//영화감독 가나다순 비교
		public class dirNameOrder implements Comparator<info>{
			public int compare(info i1,info i2) {
				return i1.dir.compareTo(i2.dir);
			}
		}
		//개봉연도 최신순
		public class YearOrder implements Comparator<info>{
			public int compare(info i1,info i2) {
				if(i1.year<i2.year) return -1;
				if(i1.year>i2.year) return 1;
				return 0;
			}
		}
		//관객수 오름차순
		public class PSum implements Comparator<info>{
			public int compare(info i1, info i2) {
				
			}
		}
		//관객수 내림차순
	}
	
	
    
	public static void main(String[] args) throws IOException, FileNotFoundException {
		File file=new File("C:/algorithm/movie.txt");
		FileReader reader=new FileReader(file);
		int cur=0;
		while((cur=reader.read())!=-1) {
			System.out.print((char)cur);
		}
		reader.close();

	}

}
