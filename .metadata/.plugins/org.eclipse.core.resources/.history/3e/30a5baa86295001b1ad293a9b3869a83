package work1;

public class six_c {
	public int max(int a,int b,int c) {
		int m=a;
		if(a<b) m=b;
		if(b>c) m=b;
		if(a<c)m=c;
		return m;
	}
	public int mcss_rec(int low, int high) {
		int a[];
		int left_sum=0;
		int right_sum=0;
		int two_sided_sum=0;
		if(low==high) return a[low];
		int mid = 0;
		mid=(mid+high)/2;
		left_sum=mcss_rec(low,mid);
		right_sum=mcss_rec(mid+1, high);
		
		return max(left_sum,right_sum,two_sided_sum);
	}
}
