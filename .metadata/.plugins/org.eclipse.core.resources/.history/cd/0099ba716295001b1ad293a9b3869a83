package work1;

public class six_c {
	public int max(int a,int b,int c) {
		int m=a;
		if(a<b) m=b;
		if(b>c) m=b;
		if(a<c)m=c;
		return m;
	}
	public int mcss_rec(int a[],int low, int high) {
		int left_sum=0;
		int right_sum=0;
		int two_sided_sum=0;
		if(low==high) return (int) a[low];
		mid=(mid+high)/2;
		return max(left_sum,right_sum,two_sided_sum);
	}
}
